<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_blog_post_form_inherit">
        <field name="name">blog.post.form.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[2]" position="after">
                <group name="show_on_website" string="Website">
                    <field name="icon" widget="image"/>
                    <field name="link_odoo_app" />
                    <field name="description_website" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
