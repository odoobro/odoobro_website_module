<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="odoobro_website_module.homepage">
        <t t-call="website.layout">
            <t t-set="title">Odoobro</t>
            <div class="main-container">
                <!-- home section -->
                <section id="home">
                    <div class="container odoobro-padding">
                        <div class="row">
                            <div class="col-md-12 col-sm-12" id="nav-buttons">
                                <h3>ODOO DEVELOPMENT</h3>
                                <h1>ODOOBRO TEAM</h1>
                                <hr />
                                    <a href="#work"
                                        class="btn btn-danger">What we do</a>
                                    <a href="#contact"
                                        class="smoothScroll btn btn-default">Talk to us</a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- work section -->
                <section id="work">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12" id="what-we-do">
                                <div class="section-title">
                                    <strong>01</strong>
                                    <h1 class="heading bold">WHAT WE DO</h1>
                                    <hr />
                                </div>
                            </div>
                            <div
                                class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                data-wow-delay="0.6s">
                                <i class="icon-desktop medium-icon"></i>
                                <h3>Point of Sale</h3>
                                <hr />
                                    <p>
                                        Integrated inventory management, operates managing 
                                        processes of retail supply chain and supports different divices (iPads,
                                        Android tablets or Laptops).
                                    </p>
                            </div>
                            <div
                                class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                data-wow-delay="0.9s">
                                <i class="icon-briefcase medium-icon"></i>
                                <h3>Sales</h3>
                                <hr />
                                    <p>
                                        Sell more with clean quotations
                                    </p>
                            </div>
                            <div
                                class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                data-wow-delay="1s">
                                <i class="icon-basket medium-icon"></i>
                                <h3>Purchase</h3>
                                <hr />
                                    <p>
                                        Integrated inventory management, operates managing 
                                        processes of retail supply chain and supports different divices (iPads,
                                        Android tablets or Laptops).
                                    </p>
                            </div>
                            <div
                                class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                data-wow-delay="1s">
                                <i class="icon-wallet medium-icon"></i>
                                <h3>Invoices</h3>
                                <hr />
                                    <p>
                                        Integrated inventory management, operates managing 
                                        processes of retail supply chain and supports different divices (iPads,
                                        Android tablets or Laptops).
                                    </p>
                            </div>
                            <div
                                class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                data-wow-delay="1s">
                                <i class="icon-bargraph medium-icon"></i>
                                <h3>Inventory Management</h3>
                                <hr />
                                    <p>
                                        Integrated inventory management, operates managing 
                                        processes of retail supply chain and supports different divices (iPads,
                                        Android tablets or Laptops).
                                    </p>
                            </div>
                            <div
                                class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                data-wow-delay="1s">
                                <i class="icon-happy medium-icon"></i>
                                <h3>CRM</h3>
                                <hr />
                                    <p>
                                        Integrated inventory management, operates managing 
                                        processes of retail supply chain and supports different divices (iPads,
                                        Android tablets or Laptops).
                                    </p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- module section -->
                <section id="team">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="section-title">
                                    <strong>02</strong>
                                    <h1 class="heading bold">WHAT WE DO</h1>
                                    <hr />
                                </div>
                            </div>
                            <t t-if="modules">
                                <t t-foreach="modules" t-as="module">
                                    <div
                                        class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp"
                                        data-wow-delay="0.6s">
                                        <figure class="icon-img">
                                            <div t-field="module.icon"
                                                t-options="{'widget': 'image', 'class': 'img-responsive' }" />
                                        </figure>
                                        <!-- <i class="icon-cloud medium-icon"></i> -->
                                        <a t-att-href="module.link_odoo_app or '#'">
                                            <h3 t-esc="module.name or ''"/>
                                        </a>
                                        <hr />
                                        <p t-esc="module.description_website or ''"/>
                                    </div>
                                </t>
                            </t>
                        </div>
                        <a href="">View More</a>
                    </div>
                </section>

                <!-- portfolio section -->
                <div id="portfolio">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="section-title">
                                    <strong>03</strong>
                                    <h1 class="heading bold">OUR PORTFOLIO</h1>
                                    <hr />
                                </div>
                                <!-- ISO section -->
                                <div class="iso-section">
                                    <ul class="filter-wrapper clearfix">
                                        <li>
                                            <a href="#" data-filter="*"
                                                class="selected opc-main-bg">All</a>
                                        </li>
                                        <li>
                                            <a href="#" class="opc-main-bg"
                                                data-filter=".html">HTML</a>
                                        </li>
                                        <li>
                                            <a href="#" class="opc-main-bg"
                                                data-filter=".photoshop">Photoshop
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="opc-main-bg"
                                                data-filter=".wordpress">Wordpress
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="opc-main-bg"
                                                data-filter=".mobile">Mobile</a>
                                        </li>
                                    </ul>
                                    <div class="iso-box-section wow fadeIn"
                                        data-wow-delay="0.9s">
                                        <div
                                            class="iso-box-wrapper col4-iso-box">

                                            <div
                                                class="iso-box html wordpress mobile col-lg-4 col-md-4 col-sm-6">
                                                <a
                                                    href="/odoobro_website_module/static/src/img/portfolio-img1.jpg"
                                                    data-lightbox-gallery="portfolio-gallery">
                                                    <img
                                                        src="/odoobro_website_module/static/src/img/portfolio-img1.jpg"
                                                        alt="portfolio img" />
                                                </a>
                                            </div>

                                            <div
                                                class="iso-box wordpress col-lg-4 col-md-4 col-sm-6">
                                                <a
                                                    href="/odoobro_website_module/static/src/img/portfolio-img2.jpg"
                                                    data-lightbox-gallery="portfolio-gallery">
                                                    <img
                                                        src="/odoobro_website_module/static/src/img/portfolio-img2.jpg"
                                                        alt="portfolio img" />
                                                </a>
                                            </div>

                                            <div
                                                class="iso-box html mobile col-lg-4 col-md-4 col-sm-6">
                                                <a
                                                    href="/odoobro_website_module/static/src/img/portfolio-img3.jpg"
                                                    data-lightbox-gallery="portfolio-gallery">
                                                    <img
                                                        src="/odoobro_website_module/static/src/img/portfolio-img3.jpg"
                                                        alt="portfolio img" />
                                                </a>
                                            </div>

                                            <div
                                                class="iso-box wordpress col-lg-4 col-md-4 col-sm-6">
                                                <a
                                                    href="/odoobro_website_module/static/src/img/portfolio-img4.jpg"
                                                    data-lightbox-gallery="portfolio-gallery">
                                                    <img
                                                        src="/odoobro_website_module/static/src/img/portfolio-img4.jpg"
                                                        alt="portfolio img" />
                                                </a>
                                            </div>

                                            <div
                                                class="iso-box html photoshop col-lg-4 col-md-4 col-sm-6">
                                                <a
                                                    href="/odoobro_website_module/static/src/img/portfolio-img5.jpg"
                                                    data-lightbox-gallery="portfolio-gallery">
                                                    <img
                                                        src="/odoobro_website_module/static/src/img/portfolio-img5.jpg"
                                                        alt="portfolio img" />
                                                </a>
                                            </div>

                                            <div
                                                class="iso-box photoshop col-lg-4 col-md-4 col-sm-6">
                                                <a
                                                    href="/odoobro_website_module/static/src/img/portfolio-img6.jpg"
                                                    data-lightbox-gallery="portfolio-gallery">
                                                    <img
                                                        src="/odoobro_website_module/static/src/img/portfolio-img6.jpg"
                                                        alt="portfolio img" />
                                                </a>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- contact section -->
                <section id="contact">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 text-center">
                                <div class="section-title">
                                    <strong>04</strong>
                                    <h1 class="heading bold">CONTACT US</h1>
                                    <hr />
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 contact-info">
                                <h2 class="heading bold">CONTACT INFO</h2>
                                <p>Description about ODOOBRO team ...
                                </p>
                                <div class="col-md-6 col-sm-4">
                                    <h3>
                                        <i
                                            class="icon-envelope medium-icon wow bounceIn"
                                            data-wow-delay="0.6s"></i>
                                        EMAIL
                                    </h3>
                                    <p>odoobro.contact@gmail.com</p>
                                </div>
                                <div class="col-md-6 col-sm-4">
                                    <h3>
                                        <i
                                            class="icon-phone medium-icon wow bounceIn"
                                            data-wow-delay="0.6s"></i>
                                        PHONES
                                    </h3>
                                    <p>xxx-xxx-xxxx | xxx-xxx-xxxx</p>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <form action="/customer_question/"
                                    method="post" data-model_name="ob.customer.question"
                                    class="customer_question_form wow fadeInUp"
                                    data-wow-delay="0.6s">
                                    <input type="hidden" name="csrf_token"
                                        t-att-value="request.csrf_token()" />
                                    <div class="col-md-6 col-sm-6">
                                        <input type="text" class="form-control"
                                            placeholder="Name" name="name" />
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <input type="email" class="form-control"
                                            placeholder="Email" name="email" />
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <textarea class="form-control"
                                            placeholder="Message" rows="7"
                                            name="description"></textarea>
                                    </div>
                                    <div
                                        class="col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8">
                                        <input type="submit"
                                            class="form-control customer_question_form_send"
                                            value="SEND MESSAGE" />

                                    </div>
<!--                                     <div
                                        class="customer_question_result col-md-12 col-sm-12">
                                        <span
                                            class="customer-question-success">
                                            THANK YOU FOR GETTING
                                            IN TOUCH!
                                        </span>
                                    </div> -->
                                </form>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
            