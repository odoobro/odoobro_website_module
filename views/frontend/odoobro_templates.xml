<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="odoobro_website_module_assets_backend" name="cloud_assets"
        inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="icon" type="image/png"
                href="/odoobro_website_module/static/src/img/logo_image.png" />
        </xpath>
    </template>

    <template id="odoobro_website_module_web_layout" name="cloud_layout"
        inherit_id="web.layout">
        <xpath expr="//head//link" position="after">
            <link rel="shortcut icon" href="/odoobro_website_module/static/src/img/logo_image.png"
                type="image/x-icon" />
        </xpath>
    </template>

    <template id="odoobro_website_module.logo" inherit_id="website.layout_logo_show"
        customize_show="True">
        <xpath expr="//a[@class='navbar-brand logo']" position="replace">
            <a href="/" class="navbar-brand logo">
                <img src="/odoobro_website_module/static/src/img/logo_image.png" />
            </a>
        </xpath>
    </template>
    
    
    <template id="odoobro_website_module.assets_frontend" inherit_id="website.assets_frontend" name="Odoobro">
        <xpath expr="." position="inside">
            
            <!-- libs css -->
            <!-- <link rel="stylesheet" href="/odoobro_website_module/static/lib/css/bootstrap.min.css" type="text/css" t-ignore="true" /> -->
            <link rel="stylesheet" href="/odoobro_website_module/static/lib/css/font-awesome.min.css" type="text/css" t-ignore="true" />
            <link rel="stylesheet" href="/odoobro_website_module/static/lib/css/animate.min.css" type="text/css" t-ignore="true" />
            <link rel="stylesheet" href="/odoobro_website_module/static/lib/css/et-line-font.css" type="text/css" t-ignore="true" />
            <link rel="stylesheet" href="/odoobro_website_module/static/lib/css/nivo-lightbox.css" type="text/css" t-ignore="true" />
            <link rel="stylesheet" href="/odoobro_website_module/static/lib/css/nivo_themes/default/default.css" type="text/css" t-ignore="true" />
            
            <!-- custom css -->
            <link rel="stylesheet" href="/odoobro_website_module/static/src/css/style.css" type="text/css" t-ignore="true" />
            
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,300,500" type='text/css' />

            <!-- lib js -->
            <!-- <script src="/odoobro_website_module/static/lib/js/jquery.js" type="text/javascript" /> -->
            
            <!-- <script src="/odoobro_website_module/static/lib/js/bootstrap.min.js" type="text/javascript" /> -->
            
            <script src="/odoobro_website_module/static/lib/js/smoothscroll.js" type="text/javascript" />
            
            <script src="/odoobro_website_module/static/lib/js/isotope.js" type="text/javascript" />

            <script src="/odoobro_website_module/static/lib/js/imagesloaded.min.js" type="text/javascript"  />

            <script src="/odoobro_website_module/static/lib/js/nivo-lightbox.min.js" type="text/javascript" />

            <script src="/odoobro_website_module/static/lib/js/jquery.backstretch.min.js" type="text/javascript" />
            
            <script src="/odoobro_website_module/static/lib/js/wow.min.js" type="text/javascript" />
            
            <!-- custom js -->
            <script src="/odoobro_website_module/static/src/js/custom.js" type="text/javascript"/>
            <script src="/odoobro_website_module/static/src/js/customer_question.js" type="text/javascript"/>
        </xpath>
    </template>
    
</odoo>